<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="0dp">

    <TextView
        android:id="@+id/numberEpisode"
        style="@style/episodeCodeStyle"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/favoriteIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SEASON 1, EPISODE 4" />

    <TextView
        android:id="@+id/name"
        style="@style/episodeNameStyle"
        app:layout_constraintEnd_toStartOf="@+id/favoriteIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numberEpisode"
        android:paddingBottom="14dp"
        tools:text="Anatomy Park" />

    <ImageView
        android:id="@+id/favoriteIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/favoriteIconDescription"
        android:scaleType="center"
        android:src="@drawable/not_favorite_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>